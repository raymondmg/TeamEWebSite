@using TeamEMVCProject.Models
@using TeamEWebSite.App_Code;
@model TeamEMVCProject.Models.ArticleShare
@{
    DbHelper db = new DbHelper();
    //技术文章信息
    Array ArticleInfo = db.ArticleShareModule.ToArray();
    
    List<TeamShareInfo> artInfo = (from ArticleShare article in ArticleInfo select new TeamShareInfo(article.ArticleImgSrc, article.ArticleName, article.ArticleDescribe, article.ArticlePublishTime.ToShortDateString())).ToList();

    
}

<div class="content-block" id="blog">
    <div class="container">
        <header class="block-heading cleafix">
            <a href="/Home/TeamShare" class="btn btn-o btn-lg pull-right">查看更多</a>
            <h1>团队分享</h1>
            <p>Keep up with the latest happenings.</p>
        </header>

    @{
        <section class="block-body">
            <div class="row">

                @foreach (var item in artInfo)
                {
                    <div class="col-sm-4 blog-post" style="height:593px;">
                        <img src=@item.ImgSrc>
                        <a href="#"><h2>@item.ArticleTitle</h2></a>
                        <div class="date">@item.PublishDate</div>
                        <p>@item.ArticleContent</p>
                        <a id="blogHref" href="">查看</a>
                    </div>
                }
               
            </div>
        </section>
    }     
    </div>
</div>