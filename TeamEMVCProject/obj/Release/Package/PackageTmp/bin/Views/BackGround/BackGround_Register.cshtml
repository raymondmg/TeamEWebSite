@model TeamEMVCProject.Models.RegisterModel
@{
    Layout = null;
}
@*后台注册模块*@

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TeamE 后台管理系统</title>
    <meta name="description" content="">
    <meta name="author" content="Raymond">

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <link href="~/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/templatemo-style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="light-gray-bg">
    <div class="templatemo-content-widget templatemo-login-widget white-bg">
        <header class="text-center">
            <div class="square"></div>
            <h1>TeamE 注册页面</h1>
        </header>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <form action="index.html" class="templatemo-login-form">
                    <div class="form-group">
                        <div class="input-group">
                            @Html.Label("请输入注册用户名")
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "请输入账号" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            @Html.Label("请输入注册密码")
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "******", @type = "password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            @Html.Label("请确认输入注册密码")
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "******", @type = "password" })
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="templatemo-blue-button width-100">注册</button>
                    </div>
                </form>
            </fieldset>
        }
    </div>
</body>
</html>
