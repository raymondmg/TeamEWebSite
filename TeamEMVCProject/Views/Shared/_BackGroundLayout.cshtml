<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TeamE 后台管理系统</title>
    <meta name="description" content="">
    <meta name="author" content="Raymond">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <link href="~/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/templatemo-style.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/assets/css/ChatPanel.css" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>


<div id="BackGroundWapper" class="templatemo-flex-row">

    <!-- LeftMenu -->
    @Html.Partial("~/Views/BackGround/Partials/BackGround_Component_LeftSilderBar.cshtml")
    <!-- Main content -->
    <div class="templatemo-content col-1 light-gray-bg">
        <!--Nav -->
        @Html.Partial("~/Views/BackGround/Partials/BackGround_Component_RightNav.cshtml")

        <!-- Main info -->
        <div class="templatemo-content-container">
            @RenderBody()
            <footer class="text-right">
                <p>
                    Copyright &copy; 2015 TeamE
                    | Developed by <a href="#" target="_parent">Raymond</a>
                </p>
            </footer>
        </div>
    </div>
</div>
    <script src="../assets/js/bootstrap.min.js"></script>
    <script src="../assets/js/jquery-2.1.3.min.js"></script>
    <script src="../assets/js/is.min.js"></script>
    <script src="http://v3.jiathis.com/code_mini/jia.js"></script>
    <script src="../assets/js/team.chat.js"></script>
    <script src="../assets/js/jquery.bootstrap.newsbox.min.js"></script>
    <script>
        chat._init();

        $drawerRight = $('#drawer-right');
        $wrapper = $('#BackGroundWapper');
        setSlideNav();
        newsRoll();

        ///////////////////////////////
        // 右侧导航
        ///////////////////////////////

        function setSlideNav() {
            jQuery("#ChatPanel").click(function(e) {
                //alert($wrapper.css('marginRight'));
                e.preventDefault();

                if ($wrapper.css('marginLeft') === '0px') {
                    $drawerRight.animate({ marginRight: 0 }, 200);
                    $wrapper.animate({ marginLeft: -300 }, 200);
                } else {
                    $drawerRight.animate({ marginRight: -300 }, 200);
                    $wrapper.animate({ marginLeft: 0 }, 200);
                }

            });
        }

        ///////////////////////////////
        // 新闻滚动
        ///////////////////////////////

        function newsRoll() {
            $("#newsList").bootstrapNews({
                newsPerPage: 5,
                autoplay: true,
                pauseOnHover: true,
                direction: 'up',
                newsTickerInterval: 4000,
                onToDo: function() {
                 
                }
            });
        }

    </script>
</body>
</html>

